#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# TypeScript type checking
echo "ğŸ“ Checking TypeScript types..."
npm run typecheck || exit 1

# ESLint linting
echo "ğŸ§¹ Running ESLint..."
npm run lint || exit 1

